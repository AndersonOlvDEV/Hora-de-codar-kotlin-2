fun main() {
    val numeros = mutableListOf<Double>()

    for (i in 1..3) {
        println("Por favor, digite o ${i}º número:")

        val entrada = readLine()?.toDoubleOrNull()

        if (entrada == null) {
            println("Erro: Entrada inválida. Por favor, digite um número real.")
            return
        }
        numeros.add(entrada)
    }

    val maior = numeros.maxOrNull()

    println("---")
    
    if (maior != null) {
        println("O maior número entre ${numeros[0]}, ${numeros[1]} e ${numeros[2]} é: $maior")
    } else {
        println("Não foi possível determinar o maior número.")
    }
}
